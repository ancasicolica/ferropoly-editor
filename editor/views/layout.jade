doctype html
html(lang='de')
  head
    title= title
    meta(name='keywords' content='Ferropoly, SBB, ZVV, Spiel, Christian Kuster')
    meta(name='description' content='Ferropoly ist ein Spiel auf dem Schweizer Eisenbahnnetz.')
    meta(charset='UTF-8')
    meta(name='author' content='Christian Kuster, CH-8342 Wernetshausen, www.kusti.ch')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.min.css')
    script(src='/configuration.js')
    script(src='/js/date.js')
    script(src='/js/jquery-2.1.1.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/angular/angular.js')
    script(src='/angular/ui-bootstrap-tpls-0.12.0.min.js')
    script(src='/socket.io/socket.io.js')
    if(ngFile)
      script(src = ngFile)

    link(rel='stylesheet', href='/css/style.css')
    block head


  body(ng-app=ngApp ng-controller=ngController)

    #wrap
      #ferropoly-navbar
        nav(class='navbar navbar-inverse navbar-navbar-fixed-top')
          .navbar-header
            button(type='button' data-target='#navbarCollapse' data-toggle='collapse' class='navbar-toggle')
              span(class='icon-bar')
              span(class='icon-bar')
              span(class='icon-bar')
            a(href='/' class='navbar-brand') Ferropoly
          div(id='navbarCollapse' class='collapse navbar-collapse')
            ul(class='nav navbar-nav')
              block navbar

            ul(class='nav navbar-nav navbar-right')
              block navbar-right
              if !hideLogout
                  li
                    a(href='/logout') Logout
              else if showSignUp
                  li
                    a(href='/signup') Anmelden


      .container-fluid
        block content


    #footer
      .container-fluid
        .row
          #footer-status.col-md-6
            if(ngFile)
              | {{statusText}}
          #footer-placeholder.col-md-5
          #footer-time.col-md-1
