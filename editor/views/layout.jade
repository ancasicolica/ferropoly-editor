  body(ng-app=ngApp ng-controller=ngController)

    #wrap
      #ferropoly-navbar
        nav(class='navbar navbar-inverse navbar-navbar-fixed-top')
          .navbar-header
            button(type='button' data-target='#navbarCollapse' data-toggle='collapse' class='navbar-toggle')
              span(class='icon-bar')
              span(class='icon-bar')
              span(class='icon-bar')
            a(href='/' class='navbar-brand') Ferropoly
          div(id='navbarCollapse' class='collapse navbar-collapse')
            ul(class='nav navbar-nav')
              block navbar

            ul(class='nav navbar-nav navbar-right')
              block navbar-right
              if !hideLogout
                  li
                    a(href='/logout') Logout
              else if showSignUp
                  li
                    a(href='/signup') Anmelden


      .container-fluid
        block content


    #footer
      .container-fluid
        .row
          #footer-status.col-md-6
            if(ngFile)
              | {{statusText}}
          #footer-placeholder.col-md-4
          #footer-time.col-md-2
            block time

