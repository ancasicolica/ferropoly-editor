doctype html
html(lang='de')
  head
    title= title
    meta(name='keywords' content='Ferropoly, SBB, ZVV, Spiel, Christian Kuster')
    meta(name='description' content='Ferropoly ist ein Spiel auf dem Schweizer Eisenbahnnetz.')
    meta(charset='UTF-8')
    meta(name='author' content='Christian Kuster, CH-8342 Wernetshausen, www.kusti.ch')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans',  type='text/css')
    script(src='/configuration.js')
    script(src='/js/date.js')
    script(src='/js/jquery-2.1.1.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/js/lodash.min.js')
    script(src='/js/jquery.ui.sortable.min.js')
    script(src='/angular/angular.js')
    script(src='/js/sortable.js')
    script(src='/angular/ui-bootstrap-tpls-0.12.0.min.js')
    if(ngFile)
      script(src = ngFile)

    link(rel='stylesheet', href='/css/style.css')
    block head
    // Cookie Consent plugin by Silktide - http://silktide.com/cookieconsent
    script.
      window.cookieconsent_options = {
        "message": "Cookies erleichtern die Bereitstellung dieser Webapplikation. Mit der Nutzung von des Ferropoly-Editors erkl√§ren Sie sich damit einverstanden, dass wir Cookies verwenden.",
        "dismiss": "Alles klar!",
        "learnMore": "Mehr infos",
        "link": "http://ferropoly.ch/wordpress/datenschutz-cookies/",
        "theme": "dark-floating"
      };
    script(src="//s3.amazonaws.com/cc.silktide.com/cookieconsent.latest.min.js")


  body(ng-app=ngApp ng-controller=ngController)

    #wrap
      #ferropoly-navbar
        nav(class='navbar navbar-inverse navbar-navbar-fixed-top')
          .navbar-header
            button(type='button' data-target='#navbarCollapse' data-toggle='collapse' class='navbar-toggle')
              span(class='icon-bar')
              span(class='icon-bar')
              span(class='icon-bar')
            a(href='/' class='navbar-brand') Ferropoly
          div(id='navbarCollapse' class='collapse navbar-collapse')
            ul(class='nav navbar-nav')
              block navbar

            ul(class='nav navbar-nav navbar-right')
              block navbar-right
              if !hideLogout
                  li
                    a(href='/logout') Logout
              else if showSignUp
                  li
                    a(href='/signup') Anmelden


      .container-fluid
        block content


    #footer
      .container-fluid
        .row
          #footer-status.col-md-6
            if(ngFile)
              | {{statusText}}
          #footer-placeholder.col-md-4
          #footer-time.col-md-2
            block time

