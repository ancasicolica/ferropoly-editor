// Success Modal Templates
#modal-success.modal.modal-message.modal-success.fade(style='display: none;', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        i.glyphicon.glyphicon-check
      .modal-title Success
      .modal-body You have done great!
      .modal-footer
        button.btn.btn-success(type='button', data-dismiss='modal') OK
