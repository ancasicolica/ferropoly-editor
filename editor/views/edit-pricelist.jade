div(role='tabpanel')
  ul(id='tablist' class='nav nav-tabs' role='tablist')
    li(role='presentation' class='active')
      a(href='#class0' aria-controls='class0' role='tab' data-toggle='tab') Sehr billig
    li(role='presentation')
      a(href='#class1' aria-controls='class1' role='tab' data-toggle='tab') Billige Orte
