          ul(ui-sortable='sortableOptions[0]' ng-model='priceRangeLists[0]' class='list list-group row')
            li(ng-repeat='t in priceRangeLists[0]' class='list-group-item item col-xs-6') {{t.property.data.pricelist.positionInPriceRange + 1}}: {{t.property.data.location.name}}

