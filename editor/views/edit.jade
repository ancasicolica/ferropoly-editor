extends layout
block head
  link(rel='stylesheet', href='/css/edit.css')
  script
    | var gameId = '#{gameId}';

block navbar
  li(class='dropdown')
    a(data-toggle='dropdown' class='dropdown-toggle' href='#') Spielparameter
    ul(role='menu' class='dropdown-menu')
      li
        a(href='' ng-click="panel='gameplay'") Spieldaten
      li
        a(href='' ng-click="panel='basics'") Preisliste
      li
        a(href='' ng-click="panel='interests'") Stargeld & Zins
      li
        a(href='' ng-click="panel='properties'") Häuser & Hotel
  li
    a(href='#') Karte
  li
    a(href='#') Test

block content
  div(ng-show='panel === "init"')
    h1 Lade die Daten... einen Moment bitte
    p
    a(href='/') Zurück zur Hauptseite
  div(ng-show='panel === "gameplay"')
    include edit-gameplay
  div(ng-show='panel === "basics"')
    include edit-basics
  div(ng-show='panel === "interests"')
    include edit-interests
  div(ng-show='panel === "properties"')
    include edit-properties
